<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/rateRecordString"
        android:textColor="@color/colorPrimaryText"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@id/rate2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/rate0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rate1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:srcCompat="@drawable/ic_cancel_off" />

    <ImageView
        android:id="@+id/rate1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rate2"
        app:layout_constraintStart_toEndOf="@id/rate0"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:srcCompat="@drawable/ic_star_off" />

    <ImageView
        android:id="@+id/rate2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rate3"
        app:layout_constraintStart_toEndOf="@id/rate1"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:srcCompat="@drawable/ic_star_off" />

    <ImageView
        android:id="@+id/rate3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rate2"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:srcCompat="@drawable/ic_star_off" />


</android.support.constraint.ConstraintLayout>
