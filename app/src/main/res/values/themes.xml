<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- basic settings -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="dividerHorizontal">@color/colorDivider</item>
        <item name="actionBarDivider">@color/colorDivider</item>
        <item name="dividerVertical">@color/colorDivider</item>
    </style>


    <style name="basicVoiceGym" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dividerHorizontal">@color/colorDivider</item>
        <item name="actionBarDivider">@color/colorDivider</item>
        <item name="dividerVertical">@color/colorDivider</item>
    </style>
</resources>
